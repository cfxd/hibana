<div class="Section Section--trustbar">
    <div class="Section__inner trustContainer">
        <div class="Section__body">
            <div class="TrustList">
                <ul class="TrustList__items" data-module-targets="TrustList__item" data-module="carousel-trustbar">
                        {%- for block in section.blocks -%}
                            <li class="TrustList__item">
                                <div class="TrustListCard">
                                    {%- if block.settings.image != blank -%}
                                        <div class="TrustListCard__icon">
                                            <img class="TrustListCard__image" src="{{ block.settings.image | img_url: '260x' }}" alt="{{ block.settings.image.alt }}"/>
                                        </div>
                                    {%- endif -%}
                                    <div class="TrustListCard__content">
                                        {%- if block.settings.title != blank -%}
                                            <h3 class="TrustListCard__title">{{ block.settings.title }}</h3>
                                        {%- endif -%}
                                        {%- if block.settings.link_text != blank -%}
                                            <a class="TrustListCard__link" href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
                                        {%- endif -%}
                                    </div>
                                </div>
                            </li>
                        {%- endfor -%}
                </ul>
            </div>
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Trust Bar",
    "max_blocks": 4,
    "blocks": [
        {
            "type": "item",
            "name": "Item",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image",
                    "info": "Size: 35 x 35 px"
                }, {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                }, {
                    "type": "text",
                    "id": "link_text",
                    "label": "Link text"
                }, {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ]
}
{% endschema %} 