<section class="sec-Products sec-Products-collection" data-section-id="{{ section.id }}" data-section-type="collection-trending">
  <div class="sec-Products_Inner">
    {%- if section.settings.title != blank -%}
      <header class="sec-Products_Header">
        <h2 class="sec-Products_Title">{{ section.settings.title }}</h2>
      </header>
    {%- endif -%}

    <div class="sec-Products_Body">
      <ul class="sec-Products_Items">
        {%- for block in section.blocks -%}
          <li class="sec-Products_Item">
            {%- render 'product-card',
              product: all_products[block.settings.product],
              width: 600,
              height: 700,
              not_grid: true
            -%}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Trending",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ]
  }
{% endschema %}
