<section class="clc-Header">
  <div class="clc-Header_Inner">
    <header class="clc-Header_Header">
      {%- render 'breadcrumbs' -%}
    </header>

    <div class="clc-Header_Body">
      {%- if collection.image != blank -%}
        <div class="clc-Header_ImageContainer">
          <div class="clc-Header_Image">
            {%- render 'responsive-image',
              image: collection.image,
              width: 1400,
              height: 650
            -%}
          </div>
        </div>
      {%- endif -%}

      <div class="clc-Header_Content">
        <h1 class="clc-Header_Title">
          {{ collection.title }}
          <span class="clc-Header_Count">{{ collection.products_count }} items</span>
        </h1>

        {%- if collection.description != blank -%}
          <div class="clc-Header_Text">{{ collection.description }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{%- paginate collection.products by 16 -%}
  <section class="clc-Collection">
    <div class="clc-Collection_Inner">
      <header class="clc-Collection_Header">
        {%- render 'collection-filters' -%}
      </header>

      <div class="clc-Collection_Body">
        <ul class="clc-Collection_Items">
          {%- for product in collection.products -%}
            <li class="clc-Collection_Item">
              {%- render 'product-card',
                product: product,
                width: 600,
                height: 700
              -%}
            </li>
          {%- endfor -%}
        </ul>
      </div>

      {%- if paginate.pages > 1 -%}
        <footer class="clc-Collection_Footer">
          {%- include 'pagination' -%}
        </footer>
      {%- endif -%}
    </div>
  </section>
{%- endpaginate -%}
