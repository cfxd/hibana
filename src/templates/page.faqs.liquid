{%- render 'page-breadcrumb' -%}

<section class="pg-Page">
  <div class="pg-Page_Inner">
    <div class="pg-Page_Body">
      <div class="pg-Page_Columns">
        <div class="pg-Page_Column pg-Page_Column-navigation">
          <h1 class="pg-Page_Title">{{ page.title }}</h1>

          {%- if linklists.page-menu.links.size > 0 -%}
            {%- render 'page-navigation' -%}
          {%- endif -%}
        </div>

        <div class="pg-Page_Column pg-Page_Column-content">
          <div class="pg-Page_Content">
            {%- if page.content != blank -%}
              <div class="pg-Page_RichText rte-RichText">
                {{ page.content }}
              </div>
            {%- endif -%}

            <div class="pg-Page_Section">
              {%- section 'page-faqs' -%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
