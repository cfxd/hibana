<div class="AccountBox" data-login-form>
    <header class="AccountBox__header">
        <h2 class="AccountBox__title">{{ 'customer.account.register' | t }}</h2>
    </header>
    {%- form 'create_customer', class: 'Form' -%}
        {%- if form.errors -%}
            <div class="Validation Validation--error">
                {%- for field in form.errors -%}
                    <p class="Validation__text">
                        {{ form.errors.messages[field] }}
                    </p>
                {%- endfor -%}
            </div>
        {%- endif -%}
        <ul class="Form__columns Form__columns--tight">
            <li class="Form__column Form__column--span">
                <div class="InputWrap">
                    <label class="InputLabel" for="FirstName">{{ 'customer.register.first_name' | t }}</label>
                    <input class="Input Input--text" type="text" name="customer[first_name]" id="FirstName" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.first_name %} value="{{ form.first_name }}" {% endif %}/>
                </div>
            </li>
            <li class="Form__column Form__column--span">
                <div class="InputWrap">
                    <label class="InputLabel" for="LastName">{{ 'customer.register.last_name' | t }}</label>
                    <input class="Input Input--text" type="text" name="customer[last_name]" id="LastName" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %} value="{{ form.last_name }}" {% endif %}/>
                </div>
            </li>
            <li class="Form__column Form__column--span">
                <div class="InputWrap">
                    <label class="InputLabel" for="Email">{{ 'customer.register.email' | t }}</label>
                    <input class="Input Input--text {% if form.errors contains 'email' %}Input--error{% endif %}" type="email" name="customer[email]" id="Email" placeholder="{{ 'customer.register.email' | t }}" value="{% if form.email %}{{ form.email }}{% endif %}" spellcheck="false" autocomplete="off" autocapitalize="off"/>
                </div>
            </li>
            <li class="Form__column Form__column--span">
                <div class="InputWrap">
                    <label class="InputLabel" for="CreatePassword">{{ 'customer.register.password' | t }}</label>
                    <input class="Input Input--text{% if form.errors contains 'password' %} Input--error{% endif %}" type="password" name="customer[password]" id="CreatePassword" placeholder="{{ 'customer.register.password' | t }}"/>
                </div>
            </li>
        </ul>
        <div class="Form__footer">
            <ul class="Form__columns Form__columns--tight">
                <li class="Form__column Form__column--span">
                    <button class="button button--block button--primary" type="submit">
                        {{ 'customer.register.submit' | t }}
                    </button>
                </li>
                <li class="Form__column  Form__column--span">
                    <a class="Form__link" href="/account/login">
                        {{ 'customer.register.form_link' | t }}
                    </a>
                </li>
            </ul>
        </div>
    {%- endform -%}
</div>
