<div class="CartFormProducts">
  <header class="CartFormProducts__header">
    <h3 class="CartFormProducts__title">{{ 'cart.general.cart_products_title' | t }}</h3>
  </header>

  <div class="CartProducts">
    <ul class="ProductList">
      {%- for item in cart.items -%}
        <li class="ProductList__item">
          {% include 'cart-product' with item:item %}
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>
