<div class="AccountAddressForm" data-address-new-form>
  {%- form 'customer_address', customer.new_address, class: 'Form' -%}
    <ul class="Form__columns Form__columns--tight">
      <li class="Form__column Form__column--span">
        <div class="InputWrap">
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
          <input class="Input Input--text" type="text" name="address[first_name]" id="AddressFirstNameNew" value="{{ form.first_name }}" placeholder="{{ 'customer.addresses.first_name' | t }}" autocapitalize="words"/>
        </div>
      </li>

      <li class="Form__column Form__column--span">
        <div class="InputWrap">
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
          <input class="Input Input--text" type="text" name="address[last_name]" id="AddressLastNameNew" value="{{ form.last_name }}" placeholder="{{ 'customer.addresses.last_name' | t }}" autocapitalize="words"/>
        </div>
      </li>

      <li class="Form__column Form__column--span">
        <div class="InputWrap">
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
          <input class="Input Input--text" type="text" name="address[company]" id="AddressCompanyNew" value="{{ form.company }}" placeholder="{{ 'customer.addresses.company' | t }}" autocapitalize="words"/>
        </div>
      </li>

      <li class="Form__column Form__column--span">
        <div class="InputWrap">
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
          <input class="Input Input--text" type="text" name="address[address1]" id="AddressAddress1New" value="{{ form.address1 }}" placeholder="{{ 'customer.addresses.address1' | t }}" autocapitalize="words"/>
        </div>
      </li>

      <li class="Form__column Form__column--span">
        <div class="InputWrap">
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
          <input class="Input Input--text" type="text" name="address[address2]" id="AddressAddress2New" value="{{ form.address2 }}" placeholder="{{ 'customer.addresses.address2' | t }}" autocapitalize="words"/>
        </div>
      </li>

      <li class="Form__column Form__column--span">
        <div class="InputWrap">
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
          <input class="Input Input--text" type="text" name="address[city]" id="AddressCityNew" value="{{ form.city }}" placeholder="{{ 'customer.addresses.city' | t }}" autocapitalize="words"/>
        </div>
      </li>

      <li class="Form__column Form__column--span UtilityHide">
        <div class="InputWrap" data-address-province-wrapper>
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
          <select class="Input Input--text" name="address[province]" id="AddressProvinceNew" data-address-province data-default="{{ form.province }}"></select>
        </div>
      </li>

      <li class="Form__column Form__column--span">
        <div class="InputWrap">
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
          <input class="Input Input--text" type="text" name="address[zip]" id="AddressZipNew" value="{{ form.zip }}" placeholder="{{ 'customer.addresses.zip' | t }}" autocapitalize="characters"/>
        </div>
      </li>

      <li class="Form__column Form__column--span">
        <div class="InputWrap">
          <label class="InputLabel UtilityScreenReaderOnly" for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
          <input class="Input Input--text" type="tel" name="address[phone]" id="AddressPhoneNew" pattern="[0-9\-]*" value="{{ form.phone }}" placeholder="{{ 'customer.addresses.phone' | t }}"/>
        </div>
      </li>

      <li class="Form__column Form__column--span">
        <div class="InputWrap InputWrap--checkbox">
          {{ form.set_as_default_checkbox }}
          <label class="InputLabel" for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
        </div>
      </li>
    </ul>

    <div class="Form__footer">
      <ul class="Form__columns Form__columns--tight">
        <li class="Form__column Form__column--span">
          <button class="button button--block button--primary" type="submit" value="{{ 'customer.addresses.add' | t }}">
            <span class="btn-Text">{{ 'customer.addresses.add' | t }}</span>
          </button>
        </li>
      </ul>
    </div>
  {%- endform -%}
</div>
