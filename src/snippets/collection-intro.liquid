<section class="sec-Intro sec-Intro-collection">
  <div class="sec-Intro_Inner">
    <div class="sec-Intro_Body">
      {%- assign image = collection.image -%}

      {%- if image != blank -%}
        <div class="sec-Intro_ImageContainer">
          <div class="sec-Intro_Image">
            {%- render 'responsive-image',
              image: image,
              width: 800,
              height: 400
            -%}
          </div>

          <div class="sec-Intro_Overlay">
            {%- render 'arches' -%}
          </div>
        </div>
      {%- else -%}
        <div class="sec-Intro_Arches">
          <div class="sec-Intro_Arch sec-Intro_Arch-rust"></div>
          <div class="sec-Intro_Arch sec-Intro_Arch-forestgreen"></div>
          <div class="sec-Intro_Arch sec-Intro_Arch-ochre"></div>
        </div>
      {%- endif -%}

      <div class="sec-Intro_Content">
        <h1 class="sec-Intro_Title">
          {{ collection.title }}

          {%- if collection.products.size > 0 -%}
            <span class="sec-Intro_Count">{{ collection.products_count }} items</span>
          {%- endif -%}
        </h1>

        {%- if collection.description != blank -%}
          <div class="sec-Intro_Text">{{ collection.description }}</div>
        {%- endif -%}

        {%- if collection.products.size == 0 -%}
          <div class="sec-Intro_Text">{{ 'collections.general.no_results' | t }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>
