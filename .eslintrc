{
  "extends": [
    "plugin:shopify/esnext"
  ],
  "env": {
    "jest": true
  },
  "rules": {
    "babel/no-invalid-this": 0,
    "import/no-anonymous-default-export": 0,
    "no-alert": 0,
    "no-console": 0,
    "no-new": 0,
    "node/shebang": 0,
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }]
  },
  "globals": {
    "document": true,
    "window": true,
    "Shopify": true,
    "theme": true
  }
}
